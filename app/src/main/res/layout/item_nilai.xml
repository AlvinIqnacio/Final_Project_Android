<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/semesterNilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Semester"
        android:textColor="#00ADB5"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/namaDetailNilai"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnDeleteNilai"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.05"
        android:background="#FF0000"
        android:backgroundTint="#FF0000"
        app:layout_constraintTop_toBottomOf="@+id/semesterNilai"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/namaDetailNilai"
        android:layout_width="275dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="#00ADB5"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8sp"
        android:text="NAMA MK"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDeleteNilai"
        app:layout_constraintTop_toTopOf="@+id/btnDeleteNilai" />

    <TextView
        android:id="@+id/totalNilai"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:text="XXX"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/namaDetailNilai"
        app:layout_constraintEnd_toStartOf="@+id/btnToDetail"
        app:layout_constraintStart_toEndOf="@+id/namaDetailNilai"
        app:layout_constraintTop_toTopOf="@+id/namaDetailNilai" />

    <ImageButton
        android:id="@+id/btnToDetail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0.2"
        android:background="#00ADB5"
        android:backgroundTint="#00ADB5"
        app:layout_constraintBottom_toBottomOf="@+id/namaDetailNilai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/namaDetailNilai"
        app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

</androidx.constraintlayout.widget.ConstraintLayout>